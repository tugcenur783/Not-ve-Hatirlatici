<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hatirlatici" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Hatirlatici.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.App" parent="ThemeOverlay.MaterialComponents.TimePicker">
        ...
        <item name="colorPrimary">@color/sari</item>
        <item name="colorOnPrimary">@color/sari</item>
        <item name="colorOnSurface">@color/sari</item>
        <item name="chipStyle">@style/Widget.App.Chip</item>
    </style>

    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.TimePicker.Display">
        <item name="android:textColor">@color/sari</item>
    </style>



    <style name="Theme.Hatirlatici.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Hatirlatici.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>